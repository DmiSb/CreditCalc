<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:theme="@style/AppThemeOverlay"
    android:background="@color/primary_50">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3">

        <TextView
            android:id="@+id/dialog_text"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:paddingRight="@dimen/space_small_8"
            android:layout_marginTop="@dimen/space_normal_16"
            android:layout_marginBottom="@dimen/space_normal_16"
            android:gravity="right"
            android:textSize="@dimen/font_larger_32"/>

        <Button
            android:id="@+id/clear_btn"
            android:layout_column="1"
            android:textSize="@dimen/font_large_24"
            android:text="@string/clear_char"/>

        <Button
            android:id="@+id/back_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/back_char"/>

        <Button
            android:id="@+id/seven_btn"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_7"/>

        <Button
            android:id="@+id/eight_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_8"/>

        <Button
            android:id="@+id/nine_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_9"/>

        <Button
            android:id="@+id/four_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_4"/>

        <Button
            android:id="@+id/five_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_5"/>

        <Button
            android:id="@+id/six_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_6"/>

        <Button
            android:id="@+id/one_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_1"/>

        <Button
            android:id="@+id/two_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_2"/>

        <Button
            android:id="@+id/three_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_3"/>

        <Button
            android:id="@+id/zero_btn"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:textSize="@dimen/font_large_24"
            android:text="@string/_0"/>

        <Button
            android:id="@+id/point_btn"
            android:textSize="@dimen/font_large_24"
            android:text="@string/punct_char"/>

    </GridLayout>

</LinearLayout>